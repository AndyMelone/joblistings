generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JobListings {
  id          Int       @id @default(autoincrement())
  company     String
  logo        String
  isNew       Boolean   @map("new")
  isFeatured  Boolean   @map("featured")
  position    String
  role        String
  level       String
  postedAt    String
  contract    String
  location    String
  }

model Language {
  id          Int       @id @default(autoincrement())
  name        String    @unique

}

model Tool {
  id          Int       @id @default(autoincrement())
  name        String    @unique

}
